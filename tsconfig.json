{
  "compilerOptions": {
    "target": "es2021",
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "allowJs": false,
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "."
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", ".serverless"]
}